@model PL.Business.Dto.IOBalance.UserDto

<div class="modal fade" id="mdledituser" tabindex="-1" role="dialog" aria-labelledby="mdledituser" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-header text-center">
            <h4 class="modal-title">Update User</h4>
            <small>Update user details</small>
        </div>

        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmUpdateUser">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.UserID, new { @id = "hdfUserId" })
                        <label for="" class="control-label col-sm-3 required">UserName</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.UserName,
                        new
                        {
                            @class = "form-control",
                            @id = "UserName"
                        })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3 required">User Type</label>
                        <div class="control-input col-sm-8">
                            <input id="EditUserTypeId" style="width:100%" name="UserTypeID" />
                            @Html.ValidationMessageFor(m => m.UserTypeID, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3 required">Branch</label>
                        <div class="control-input col-sm-8">
                            <input id="EditBranchID" style="width:100%" name="BranchId" />
                            @Html.ValidationMessageFor(m => m.BranchId, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button id="updatedetails" type="button" class="btn btn-sm btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.User.UpdateUser())">Update User</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>