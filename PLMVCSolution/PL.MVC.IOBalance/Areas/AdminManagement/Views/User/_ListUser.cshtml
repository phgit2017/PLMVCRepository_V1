@model List<PL.Business.Dto.IOBalance.UserDto>
<table id="gvUser" class="table table-striped">
    <thead>
        <tr>
            <th data-width="100" data-field="useraction">Action</th>
            <th data-width="100" data-field="username">Username</th>
            <th data-width="120" data-field="usertype">User Type</th>
            <th data-width="120" data-field="userbranch">Branch</th>
            <th data-width="100" data-field="useractive">Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var users in Model)
        {
            var isActivateDisplay = users.IsActive ? "Deactivate" : "Activate";
            var isActivateValue = users.IsActive ? false : true;
            var isActiveClass = users.IsActive ? "btn-danger" : "btn-success";
            var isActiveYesNo = users.IsActive ? "Yes" : "No";
            <tr>
                <td>
                    <i></i>
                    <span>
                        <a href="javascript:void(0)" type="button" class="selected" id="editbutton"
                                data-button-type="actionbuttons"
                                data-action-type="editbutton"
                                data-user-id="@users.UserID"
                                data-user-name="@users.UserName"
                                data-user-type="@users.UserTypeName"
                                data-user-password="@users.Password"
                                data-user-type-id="@users.UserTypeID"
                                data-user-branch-id="@users.BranchId">
                            Edit Details
                        </a>
                    </span>
                    |
                    <span>
                        <button type="button" id="updateactive" class="btn btn-xs selected @isActiveClass"
                                data-button-type="actionbuttons"
                                data-action-type="deletebutton"
                                data-user-id="@users.UserID"
                                data-user-is-active="@isActivateValue"
                                data-url="">
                            @isActivateDisplay
                        </button>
                    </span>
                </td>
                <td>
                    <i></i>
                    <span>@users.UserName</span>
                </td>
                <td>
                    <i></i>
                    <span>@users.UserTypeName</span>
                </td>
                <td>
                    <i></i>
                    <span>@users.BranchName</span>
                </td>
                <td>
                    <i></i>
                    <span>@isActiveYesNo</span>
                </td>
            </tr>
        }
    </tbody>
</table>