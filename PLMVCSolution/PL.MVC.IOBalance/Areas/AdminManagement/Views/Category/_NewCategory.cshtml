@model PL.Business.Dto.IOBalance.CategoryDto
<div>
    <form class="form-horizontal" id="frmCategory">
        <div class="form-group">
            <label for="" class="control-label col-sm-3 required">Category Code</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.CategoryCode, new
                {
                    @class = "form-control",
                    @id = "CategoryCode"
                })
                @Html.ValidationMessageFor(m => m.CategoryCode, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-sm-3 required">Category Name</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.CategoryName, new
                {
                    @class = "form-control",
                    @id = "CategoryName"
                })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-3 text-right">
                <button id="savedetails" type="button" class="btn btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Category.SaveCategory())">Save Category</button>
            </div>
        </div>
    </form>
</div>