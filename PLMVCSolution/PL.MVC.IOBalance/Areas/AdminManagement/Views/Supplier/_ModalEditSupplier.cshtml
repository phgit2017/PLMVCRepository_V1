@model PL.Business.Dto.IOBalance.SupplierDto

<div class="modal fade" id="mdleditsupplier" tabindex="-1" role="dialog" aria-labelledby="mdleditsupplier" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-header text-center">
            <h4 class="modal-title">Update Supplier</h4>
            <small>Update supplier details</small>
        </div>
        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmUpdateSupplier">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.SupplierID, new { @id = "hdfSupplierId" })
                        <label for="" class="control-label col-sm-3 required">Supplier Code</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.SupplierCode,
                        new
                        {
                            @class = "form-control",
                            @id = "SupplierCode"
                        })
                            @Html.ValidationMessageFor(m => m.SupplierCode, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3 required">Supplier Name</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.SupplierName,
                        new
                        {
                            @class = "form-control",
                            @id = "SupplierName"
                        })
                            @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button id="updatedetails" type="button" class="btn btn-sm btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Supplier.UpdateSupplier())">Update Category</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>