@model PL.Business.Dto.IOBalance.SupplierDto
<div>
    <form class="form-horizontal" id="frmSupplier">
        <div class="form-group">
            <label for="" class="control-label col-sm-3 required">Supplier Code</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.SupplierCode, new
                {
                    @class = "form-control",
                    @id= "SupplierCode"
                })
                @Html.ValidationMessageFor(m => m.SupplierCode, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-sm-3 required">Supplier Name</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.SupplierName, new
                {
                    @class = "form-control",
                    @id = "SupplierName"
                })
                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-3 text-right">
                <button id="savedetails" type="button" class="btn btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Supplier.SaveSupplier())">Save Supplier</button>
            </div>
        </div>
    </form>
</div>