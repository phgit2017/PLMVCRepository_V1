@model PL.MVC.IOBalance.Areas.AdminManagement.Models.CustomerSearchModel

<div class="modal fade" id="mdlsearchcustomer" tabindex="-1" role="dialog" aria-labelledby="mdlsearchcustomer" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-header text-center">
            <h4 class="modal-title">Search Customer</h4>
            <small>search your query here</small>
        </div>

        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmSearchCustomer">
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Customer Code</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.CustomerCode,
                        new
                        {
                            @class = "form-control",
                            @id = "CustomerCode"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Last Name</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.LastName,
                        new
                        {
                            @class = "form-control",
                            @id = "LastName"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">First Name</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.FirstName,
                        new
                        {
                            @class = "form-control",
                            @id = "FirstName"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Address</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.Address,
                        new
                        {
                            @class = "form-control",
                            @id = "Address"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Active?</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchCustomerYesNo" style="width:100%" name="isActive" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button type="button" id="removefilter" class="btn btn-sm btn-default">Remove Filter</button>
                            <button id="searchdetails" type="button" class="btn btn-sm btn-warning">Search Customer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>