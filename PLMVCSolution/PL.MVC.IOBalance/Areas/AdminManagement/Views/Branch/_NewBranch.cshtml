@model PL.Business.Dto.IOBalance.BranchDto
<div>
    <form class="form-horizontal" id="frmBranch">
        <div class="form-group">
            <label for="" class="control-label col-sm-3 required">Branch Name</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.BranchName, new
                {
                    @class = "form-control",
                    @id= "BranchName"
                })
                @Html.ValidationMessageFor(m => m.BranchName, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-sm-3">Branch Address</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.BranchAddress, new
                {
                    @class = "form-control",
                    @id = "BranchAddress"
                })
                @Html.ValidationMessageFor(m => m.BranchAddress, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-sm-3">Branch Details</label>
            <div class="control-input col-sm-8">
                @Html.TextBoxFor(m => m.BranchDetails, new
                {
                    @class = "form-control",
                    @id = "BranchDetails"
                })
                @Html.ValidationMessageFor(m => m.BranchDetails, "", new { @class = "error" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-3 text-right">
                <button id="savedetails" type="button" class="btn btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Branch.SaveBranch())">Save Branch</button>
            </div>
        </div>
    </form>
</div>