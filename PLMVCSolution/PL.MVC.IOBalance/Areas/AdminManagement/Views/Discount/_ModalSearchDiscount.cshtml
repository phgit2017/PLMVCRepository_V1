@model PL.MVC.IOBalance.Areas.AdminManagement.Models.DiscountSearchModel

<div class="modal fade" id="mdlsearchdiscount" tabindex="-1" role="dialog" aria-labelledby="mdlsearchdiscount" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-header text-center">
            <h4 class="modal-title">Search Discount</h4>
            <span><small>search your query here</small></span>
        </div>


        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmSearchDiscount">
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Branch Name</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchProductBranch" style="width:100%" name="BranchID" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button type="button" id="removefilter" class="btn btn-sm btn-default">Remove Filter</button>
                            <button id="searchdetails" type="button" class="btn btn-sm btn-warning">Search Discount</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
