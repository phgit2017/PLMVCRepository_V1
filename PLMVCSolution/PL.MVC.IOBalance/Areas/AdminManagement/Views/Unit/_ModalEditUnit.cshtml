@model PL.Business.Dto.IOBalance.UnitDto

<div class="modal fade" id="mdleditunit" tabindex="-1" role="dialog" aria-labelledby="mdleditunit" aria-hidden="true">
    <div class="modal-dialog">
        <h4 class="modal-title text-center">Update Unit</h4>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form class="form-horizontal" id="frmUpdateUnit">
                <div class="form-group">
                    @Html.HiddenFor(m => m.UnitID, new { @id = "hdfUnitId" })
                    <label for="" class="control-label col-sm-3 required">Description</label>
                    <div class="control-input col-sm-8">
                        @Html.TextBoxFor(m => m.UnitDesc,
                        new
                        {
                            @class = "form-control",
                            @id = "UnitDesc"
                        })
                        @Html.ValidationMessageFor(m => m.UnitDesc, "", new { @class = "error" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-3 text-right">
                        <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                        <button id="updatedetails" type="button" class="btn btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Unit.UpdateUnit())">Update Unit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>