@model List<PL.Business.Dto.IOBalance.UnitDto>
@using PL.Business.Dto.IOBalance;
@using PL.MVC.IOBalance.Areas.AdminManagement.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Unit Page</h4>

    <div class="text-right">
        <button id="searchbutton" class="btn btn-default"
                data-action-type="searchbutton">
            <i class="glyphicon glyphicon-search"></i> Search
        </button>

        <button id="refreshbutton" class="btn btn-default"
                data-action-type="refreshbutton"
                data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Unit.RefreshUnit())">
            <i class="glyphicon glyphicon-refresh"></i> Refresh
        </button>
    </div>


    <br />

    <div id="divUnit">
        @Html.Partial(IOBALANCEMVC.AdminManagement.Unit.Views._ListUnit, Model)
    </div>
</div>

<br />

@Html.Partial(IOBALANCEMVC.AdminManagement.Unit.Views._NewUnit, new UnitDto())

<div id="divResultContainer" style="display:none"></div>

@section scripts{
    <script type="text/javascript" src="@IOBALANCELINKS.Scripts.iobalance.functions.adminmanagement.adminmanagement_unit_js"></script>
    <script type="text/javascript" src="@IOBALANCELINKS.Scripts.infrastructure.jquery_deserialize_js"></script>
    @Scripts.Render("~/bundles/jqueryval");
}

@section modals{
    @Html.Partial(IOBALANCEMVC.AdminManagement.Unit.Views._ModalEditUnit, new UnitDto())
    @Html.Partial(IOBALANCEMVC.AdminManagement.Unit.Views._ModalSearchUnit, new UnitSearchModel())
}

<link rel="stylesheet" href="@IOBALANCELINKS.Content.kendo.kendo_common_material_min_css" />
<link rel="stylesheet" href="@IOBALANCELINKS.Content.kendo.kendo_material_min_css" />