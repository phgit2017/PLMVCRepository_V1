@model PL.MVC.IOBalance.Areas.AdminManagement.Models.UnitSearchModel

<div class="modal fade" id="mdlsearchunit" tabindex="-1" role="dialog" aria-labelledby="mdlsearchunit" aria-hidden="true">
    <div class="modal-dialog">
        <h4 class="modal-title text-center">Search Unit</h4>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form class="form-horizontal" id="frmSearchUnit">
                <div class="form-group">
                    <label for="" class="control-label col-sm-3 required">Description</label>
                    <div class="control-input col-sm-8">
                        @Html.TextBoxFor(m => m.Description,
                            new
                            {
                                @class = "form-control",
                                @id = "UnitDesc"
                            })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-3 text-right">
                        <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                        <button id="searchdetails" type="button" class="btn btn-warning" data-url="@Url.Action(IOBALANCEMVC.AdminManagement.Unit.SearchUnit())">Search Unit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>