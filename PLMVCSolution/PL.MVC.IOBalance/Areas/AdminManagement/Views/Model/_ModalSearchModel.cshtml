@model PL.MVC.IOBalance.Areas.AdminManagement.Models.ModelSearchModel

<div class="modal fade" id="mdlsearchmodel" tabindex="-1" role="dialog" aria-labelledby="mdlsearchmodel" aria-hidden="true">
    <div class="modal-dialog">
        <h4 class="modal-title text-center">Search Model</h4>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form class="form-horizontal" id="frmSearchModel">
                <div class="form-group">
                    <label for="" class="control-label col-sm-3">Model Name</label>
                    <div class="control-input col-sm-8">
                        @Html.TextBoxFor(m => m.ModelName,
                        new
                        {
                            @class = "form-control",
                            @id = "ModelName"
                        })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-3 text-right">
                        <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                        <button id="searchdetails" type="button" class="btn btn-warning">Search Model</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>