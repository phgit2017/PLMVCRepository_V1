@model List<PL.Business.Dto.IOBalance.ModelDto>
<table id="gvModel" class="table table-striped">
    <thead>
        <tr>
            <th data-width="100" data-field="modelaction">Action</th>
            <th data-width="120" data-field="modelname">Model Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var models in Model)
        {
            <tr>
                <td>
                    <i></i>
                    <span>
                        <button type="button" class="btn btn-xs btn-default selected" id="editbutton"
                                data-button-type="actionbuttons"
                                data-action-type="editbutton"
                                data-model-id="@models.ModelID"
                                data-model-name="@models.ModelName">
                            <i class="glyphicon glyphicon-edit"></i> Edit
                        </button>
                    </span>
                </td>
                <td>
                    <i></i>
                    <span>@models.ModelName</span>
                </td>
            </tr>
        }
    </tbody>
</table>