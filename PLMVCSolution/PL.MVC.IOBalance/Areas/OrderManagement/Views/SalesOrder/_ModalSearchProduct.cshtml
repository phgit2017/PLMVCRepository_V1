@model PL.MVC.IOBalance.Areas.OrderManagement.Models.ProductSearchModel
@using Infrastructure.Utilities;
@using PL.MVC.IOBalance.Infrastructure;
@using PL.Business.Common;
<div class="modal fade" id="mdlsearchproduct" tabindex="-1" role="dialog" aria-labelledby="mdlsearchproduct" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-header text-center">
            <h4 class="modal-title">Search Product</h4>
            <small>search your query here</small>
        </div>

        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmSearchProduct">
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Code</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductCode,
                        new
                        {
                            @class = "form-control",
                            @id = "SearchProductCode"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Name</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductName,
                        new
                        {
                            @class = "form-control",
                            @id = "SearchProductName"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Extension</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductExt, new
                       {
                           @class = "form-control",
                           @id = "SearchProductExtension"
                       })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Size</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.Size, new
                       {
                           @class = "form-control",
                           @id = "SearchProductSize"
                       })
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="" class="control-label col-sm-3">Model</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchProductModel" style="width:100%" name="ModelId" />
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Category</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchProductCategory" style="width:100%" name="CategoryId" />
                        </div>
                    </div>
                    @{
                        var userTypeId = Session[SessionVariables.UserDetails].GetUserTypeIdFromSession();
                        if (userTypeId == Constants.UserTypeAdminId)
                        {
                            <div class="form-group">
                                <label for="" class="control-label col-sm-3">Branch</label>
                                <div class="control-input col-sm-8">
                                    <input id="SearchProductBranch" style="width:100%" name="BranchId" />
                                </div>
                            </div>
                        }
                    }
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button type="button" id="removeproductfilter" class="btn btn-sm btn-default">Remove Filter</button>
                            <button id="searchdetails" type="button" class="btn btn-sm btn-warning">Search Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>