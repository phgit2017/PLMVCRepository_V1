@model PL.Business.Dto.IOBalance.ReportCombinationDto
@using Infrastructure.Utilities;
@using PL.MVC.IOBalance.Infrastructure;
@using PL.Business.Common;
<div class="modal fade" id="mdlsearchinventoryreport" tabindex="-1" role="dialog" aria-labelledby="mdlsearchinventoryreport" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-header text-center">
            <h4 class="modal-title">Search Queries</h4>
            <small>Search your record here</small>
        </div>

        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmSearchInventoryReport">
                    @{
                        var userTypeId = Session[SessionVariables.UserDetails].GetUserTypeIdFromSession();
                        if (userTypeId == Constants.UserTypeAdminId)
                        {
                            <div class="form-group">
                                <label for="" class="control-label col-sm-3">Branch</label>
                                <div class="control-input col-sm-8">
                                    <input id="SearchProductBranch" style="width:100%" name="BranchId" />
                                </div>
                            </div>
                        }
                    }
                    @Html.ValidationMessageFor(m => m.BranchId, "", new { @class = "error" })

                    <div class="form-group">
                        <label for="" class="control-label col-sm-3 required">Product</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchProduct" style="width:100%" name="ProductID" />
                            @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "error" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3 text-right">
                            <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                            <button type="button" id="removefilter" class="btn btn-sm btn-default">Remove Filter</button>
                            <button id="searchdetails" type="button" class="btn btn-sm btn-warning">Search Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>