@model PL.MVC.IOBalanceV2.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="panel panel-default col-sm-8 col-sm-offset-1 col-md-offset-2 col-md-6 login-form">
    <div class="panel-body">
        <section id="loginForm">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @*@Html.ValidationSummary(true)*@

                <fieldset class="form-horizontal">
                    <img src="~/Content/assets-common/img/logo-sample.svg" class="logo-brand" />
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-sm-12" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-sm-12" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="form-group">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <label for="RememberMe">Remember me?</label>
                        </div>
                    </div>
                    <input type="submit" value="Log in" class="btn btn-block btn-primary" />
                </fieldset>
                @*<p class="well-lg text-center">
                    Don't have an account? @Html.ActionLink("Register here.", "Register")
                </p>*@
            }
        </section>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
