@model PL.Business.Dto.IOBalanceV2.SalesOrderDto

<div class="form-group">
    @Html.HiddenFor(m => m.SalesOrderId, new { @id = "hdfSalesOrderId" })
    @Html.HiddenFor(m => m.CustomerId, new { @id = "hdfCustomerId" })
    <label for="" class="control-label col-sm-3 required">Sales No.</label>
    <div class="control-input col-md-9">
        @Html.TextBoxFor(m => m.SalesNo,
        new
        {
            @class = "form-control",
            @id = "SalesNo",
            @disabled = "disabled"
        })
        @Html.ValidationMessageFor(m => m.SalesNo, "", new { @class = "error" })
    </div>
</div>
<div class="form-group">
    <label for="" class="control-label col-sm-3 required">Customer</label>
    <div class="control-input col-sm-9">
        <input type="text" class="form-control" id="CustomerId" name="CustomerId" />
        @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "error" })
    </div>
</div>