@model PL.MVC.IOBalanceV2.Areas.OrderManagement.Models.InventorySearchModel


<div class="modal fade" id="mdlsearch" tabindex="-1" role="dialog" aria-labelledby="mdlsearch" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-header text-center">
            <h4 class="modal-title">Search Product</h4>
        </div>

        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frmSearch">
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Category</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchCategoryId" style="width:100%" name="CategoryId" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Code</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductCode,
                        new
                        {
                            @class = "form-control",
                            @id = "ProductCode"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Name</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductName,
                        new
                        {
                            @class = "form-control",
                            @id = "ProductName"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Description</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductDescription,
                        new
                        {
                            @class = "form-control",
                            @id = "ProductDescription"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Product Size</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.ProductSize,
                        new
                        {
                            @class = "form-control",
                            @id = "ProductSize"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Current Number</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.CurrentNum,
                        new
                        {
                            @class = "form-control",
                            @id = "CurrentNum"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">DR Number</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.DRNum,
                        new
                        {
                            @class = "form-control",
                            @id = "DRNum"
                        })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label col-sm-3">Carton Number</label>
                        <div class="control-input col-sm-8">
                            @Html.TextBoxFor(m => m.CartonNum,
                        new
                        {
                            @class = "form-control",
                            @id = "CartonNum"
                        })
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="" class="control-label col-sm-3">Active?</label>
                        <div class="control-input col-sm-8">
                            <input id="SearchCustomerYesNo" style="width:100%" name="isActive" />
                        </div>
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-transparent">Cancel</button>
                <button type="button" id="removefilter" class="btn btn-transparent">Reset</button>
                <button id="searchdetails" type="button" class="btn btn-success">Search</button>
            </div>
        </div>
    </div>
</div>