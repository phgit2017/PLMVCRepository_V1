@using Kendo.Mvc.UI;
@using PL.Business.Common;

@(Html.Kendo().Grid<PL.Business.Dto.IOBalanceV2.ReportSalesOrderReceiptDto>()
        .Name("gvSOReceipt")
        .Columns(columns =>
        {
            columns.Template(@<text></text>).ClientTemplate("<div class='btn-group btn-group-xs'><a href='javascript:void(0)' type='button' data-edit-selected='true' class='btn btn-info' id='generatereceipt' data-button-type='actionbuttons' data-action-type='editbutton' " +
                    " data-reportlist-salesorderid='#=SalesOrderId#' data-reportlist-customerid='#=CustomerId#' data-reportlist-salesno='#=SalesNo#' > <i class='fa fa-file-excel-o'></i> </a> " +
                    "</div>")
                .Title("Actions")
                .Width(95);
            columns.Bound(c => c.SalesNo).Title("Sales Number").Width(300).Sortable(false).Lockable(true);
            columns.Bound(c => c.customer.CustomerDropDownDisplay).Title("Customer Name").Width(300).Sortable(false).Lockable(true);
            columns.Bound(c => c.DateCreatedWithFormat).Title("Date Created").Width(300).Sortable(false).Lockable(false);
        })
        .Scrollable()
        .Sortable(sort => sort.AllowUnsort(false))
        .Pageable()
        .ColumnMenu()
        .DataSource(dataSource => dataSource
            .Ajax()
                .Read(read => read.Action("GetSOReceiptReport", "Order"))
            .PageSize(50)
        )
)
