@using Kendo.Mvc.UI;
@using PL.Business.Common;

@(Html.Kendo().Grid<PL.Business.Dto.IOBalanceV2.ReportPurchaseOrderDto>()
        .Name("gvPO")
        .Columns(columns =>
        {
            columns.Bound(c => c.product.ProductId).Visible(false);
            columns.Bound(c => c.product.ProductInfoDisplay).Title("Product Name").Width(300);
            columns.Bound(c => c.SupplierInfoDisplay).Title("Supplier").Width(300);
            columns.Bound(c => c.DateCreatedWithTimeFormat).Title("Date Purchased").Width(300);
        })
        .Scrollable()
        .Pageable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetPOReport", "Order"))
            .PageSize(50)
        )
)