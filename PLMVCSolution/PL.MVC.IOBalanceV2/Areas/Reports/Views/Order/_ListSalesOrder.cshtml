@using Kendo.Mvc.UI;
@using PL.Business.Common;

@(Html.Kendo().Grid<PL.Business.Dto.IOBalanceV2.ReportSalesOrderDto>()
        .Name("gvSO")
        .Columns(columns =>
        {
            columns.Bound(c => c.SalesNo).Title("Sales Number").Width(300);
            columns.Bound(c => c.customer.CustomerDropDownDisplay).Title("Customer Name").Width(300);
            columns.Bound(c => c.DateCreatedWithTimeFormat).Title("Date Ordered").Width(300);
        })
        .Scrollable()
        .Pageable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetSOReport", "Order"))
            .PageSize(50)
        )
)
